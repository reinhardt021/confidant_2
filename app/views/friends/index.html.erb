<div class="container">
  <div class="well text-center"> 
    <div class="row">
      <% title "User List" %>
      <a href="/">
        <h1 id="title">
          <strong>
            FRIENDS
          </strong>
        </h1>
      </a>
      <div class="btn-group">
        <button class="btn btn-primary" id="list">
          List All
        </button>
        <button class="btn btn-primary" id="newSearch">
          Search
        </button>
        <button class="btn btn-primary" id="addNew">
          Add New
        </button>
      </div>
    </div>
    <hr/>
    <div class="row searchForm">
      <div class="col-md-6 col-md-offset-3">
        <div class="input-group">
          <input type="text" class="form-control" id="search" placeholder="Search..." />
          <span class="input-group-btn">
            <button class="btn btn-default" id="find" type="button">
              ?
            </button>
          </span>
        </div>
        <div id="error-message">
        </div>
      </div>
    </div>
    <hr/>
    <div class="row addForm">
      <%= form_for @friend, class: "form-inline", id: "newContactForm" do |f| %>
        <div class="form-group">
          <%= f.label :first_name, class: "sr-only" %>
          <%= f.text_field :first_name, class: "form-control", id: "first-name", placeholder: "first name" %>
        </div>
        <div class="form-group">
          <%= f.label :last_name, class: "sr-only" %>
          <%= f.text_field :last_name, class: "form-control", id: "last-name", placeholder: "last name" %>
        </div>
        <div class="form-group">
          <%= f.label :username, class: "sr-only" %>
          <%= f.text_field :username, class: "form-control", id: "username", placeholder: "username" %>
        </div>
        <%= f.submit "+", class: "btn btn-default", id: "add" %>
      <% end %>
      <form class="form-inline" id="newContactForm">
        <div class="form-group">
          <label class="sr-only" for="">
            First Name
          </label>
          <input type="text" class="form-control" id="" placeholder="first name" />
        </div>
        <div class="form-group">
          <label class="sr-only" for="">
            Last Name
          </label>
          <input type="text" class="form-control" id="" placeholder="last name" />
        </div>
        <div class="form-group">
          <label class="sr-only" for="">
            username
          </label>
          <input type="text" class="form-control" id="" placeholder="username" />
        </div>
        <div class="form-group">
          <label class="sr-only" for="">
            Email
          </label>
          <input type="email" class="form-control" id="" placeholder="email" />
        </div>
        <button type="submit" class="btn btn-default" id="add">
          <strong>
            +
          </strong>
        </button>
      </form>
    </div>
  </div>

  <div class="well">
    <div class="row">
      <div class="table-responsive">
        <table class="table" id="friends">
          <thead>
            <tr>
              <th>FRIENDS</th>
              <th>First Name</th>
              <th>Last Name</th>
              <th>username</th>
              <th>Emails</th>
              <th>Numbers</th>
              <th>Teams</th>
              <th>Edit</th>
              <th>Confidants</th>
            </tr>
          </thead>
          <tbody>
            <% @friends.each do |friend| %>
              <tr>
                <td>[gravatar]</td>
                <td><%= friend.first_name %></td>
                <td><%= friend.last_name %></td>
                <td><%= friend.username %></td>
                <td>[emails]</td>
                <td>[numbers]</td>
                <td>[teams]</td>
                <td>
                  <i class="fa fa-pencil"></i>
                  <%= link_to 'Edit', 
                    edit_friend_path(friend), 
                    class: "btn btn-primary edit" 
                  %>
                  <i class="fa fa-trash"></i>
                  <%= link_to 'Delete', 
                    "/friends/#{friend.id}", 
                    method: :delete, 
                    data: { confirm: 'Are you sure?' }, 
                    class: "btn btn-primary delete" 
                  %>
                </td>
                <td>
                  <%= link_to "Add Confidant", friendships_path, :method => :post %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        
      </div>
    </div>
  </div>
</div>
