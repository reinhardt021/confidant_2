<div class="row">

  <% @nodes.each do |node| %>
    <div class="well nodes" id="<%= node.id %>" 
      data-id="<%= node.id %>"
      data-x="<%= node.position_x ? node.position_x : -1 %>" 
      data-y="<%= node.position_y ? node.position_y : -1 %>">
      <h3 alt='title' contenteditable='true'>
        <%= node.title %> [<%= node.id %>]
      </h3>
      <p alt='content'>
        <%= node.content %>
      </p>
      <small alt='node_type'>
        type: <%= node.node_type %>
      <!-- <div> -->
        <i class="fa fa-pencil"></i>
        <%= link_to 'Edit',
          edit_node_path(node),
          class: 'edit'
        %>
        <i class="fa fa-trash"></i>
        <%= link_to 'Delete',
          "/node/#{node.id}",
          method: :delete,
          data: { confirm: 'Are you sure?' },
          class: 'delete'
        %>
      <!-- </div> -->
      </small>
      <div>
        <input type="number" placeholder="node id" />
        <button class="btn btn-primary">
          connect
        </button>
        <ul>
          <li>List connected nodes here</li>
        </ul>
      </div>
    </div>
  <% end %>

</div>
